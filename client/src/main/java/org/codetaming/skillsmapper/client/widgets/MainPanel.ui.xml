<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:v="urn:import:org.codetaming.skillsmapper.client.views">
    <b:Container fluid="true">
        <b:Navbar position="FIXED_TOP">
            <b:Container fluid="true">
                <b:NavbarHeader>
                    <b:NavbarBrand>
                        Skills Mapper
                    </b:NavbarBrand>
                </b:NavbarHeader>
            </b:Container>
        </b:Navbar>
        <b:Container fluid="true">
            <b:Container fluid="true">
                <b:Row addStyleNames="max-height">
                    <b:Column size="SM_4" addStyleNames="max-height">
                        <v:PeopleViewWidget ui:field="peopleViewWidget"/>
                    </b:Column>
                    <b:Column size="SM_8" addStyleNames="max-height">
                        <v:ProfileViewWidget ui:field="profileViewWidget"/>
                    </b:Column>
                </b:Row>
            </b:Container>
        </b:Container>
    </b:Container>
</ui:UiBinder>