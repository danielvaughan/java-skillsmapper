<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:w="urn:import:org.codetaming.skillsmapper.client.widgets">
    <b:Container fluid="true">
        <b:Panel addStyleNames="max-height pad-bottom">
            <b:PanelHeader>
                <b:Heading size="H3" text="Profile"/>
            </b:PanelHeader>
            <b:PanelBody addStyleNames="scrollable">
                <b:Container fluid="true">
                    <b:Row>
                        <b:Column size="MD_2">
                            <w:ProfileImageWidget ui:field="profileImageWidget"></w:ProfileImageWidget>
                        </b:Column>
                        <b:Column size="MD_10">
                            <w:ProfileDetailsWidget ui:field="profileDetailsWidget"></w:ProfileDetailsWidget>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="MD_12">
                            <w:SkillsWidget ui:field="skillsWidget"></w:SkillsWidget>
                        </b:Column>
                    </b:Row>
                </b:Container>
            </b:PanelBody>
        </b:Panel>
    </b:Container>
</ui:UiBinder>