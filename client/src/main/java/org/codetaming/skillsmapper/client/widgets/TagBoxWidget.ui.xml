<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">

    <ui:style type='org.codetaming.skillsmapper.client.widgets.TagBoxWidget.MyStyle'>
        .spacing {
            margin-right: 5px;
        }
    </ui:style>

    <b:Panel addStyleNames="max-height pad-bottom">
        <b:PanelHeader>
            <b:Heading size="H3" ui:field="heading"/>
        </b:PanelHeader>
        <b:PanelBody addStyleNames="scrollable">
            <b.html:Paragraph ui:field="bucket"/>
        </b:PanelBody>
    </b:Panel>
</ui:UiBinder>